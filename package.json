{
  "name": "rooster-teeth-unofficial-desktop-app",
  "productName": "Rooster Teeth Unofficial App",
  "description": "Unofficial Desktop App for Rooster Teeth",
  "repository": "https://github.com/tim-green/unofficial-rooster-teeth-desktop-app",
  "version": "0.0.2",
  "license": "GPL-3.0-only",
  "author": {
    "name": "Tim Green",
    "email": "github@timgreen.ws"
  },
  "main": "main.js",
  "scripts": {
    "test": "jshint main.js",
    "electron": "electron .",
    "start": "./node_modules/.bin/electron .",
    "icon-gen": "electron-icon-maker --input=./src/assets/images/rooster_teeth_icon_1100.png --output=./build",
    "generate": "yarn icon-gen",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "./node_modules/.bin/electron-builder build",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^9.1.1",
    "electron-builder": "^22.7.0",
    "electron-icon-maker": "0.0.4",
    "jshint": "^2.11.1"
  },
  "dependencies": {
    "7zip-bin": "^5.0.3",
    "ajv": "^6.12.3",
    "electron-prefs": "^1.0.7",
    "lint": "^1.1.2",
    "yarn": "^1.22.4"
  },
  "files": [
    "*.js",
    "src",
    "node_modules"
  ],
  "build": {
    "appId": "com.timgreen.rtdpa",
    "productName": "Rooster Teeth Unofficial App",
    "copyright": "",
    "mac": {
      "category": "public.app-category.video",
      "target": [
        {
          "target": "dmg"
        }
      ],
      "icon": "build/icons/mac/icon.icns"
    },
    "dmg": {},
    "mas": {},
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ],
      "icon": "build/icons/win/icon.ico",
      "legalTrademarks": "",
      "publisherName": ""
    },
    "nsis": {
      "oneClick": false,
      "runAfterFinish": false,
      "allowElevation": true
    },
    "appx": {
      "applicationId": "Rooster Teeth Unofficial App",
      "backgroundColor": "#00aeef",
      "displayName": "RoosterTeeth",
      "identityName": "RoosterTeeth",
      "publisher": "",
      "publisherDisplayName": "TimGreen",
      "languages": [
        "en"
      ]
    },
    "portable": {}
  }
}
